@import "/static/css/vendor.wxss";

.page {
  width: 100vw;
  height: 100vh;
}
.msg {
  width: 100vw;
  height: 60vw;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding-top: 4vw;
  padding-bottom: 2vw;
}
.msg .logo {
  height: 230rpx;
  width: 150rpx;
}
.msg .head {
  padding: 1vw 5vw 0 5vw;
  font-size: 32rpx;
  color: #808080;
}
.msg .phone {
  margin-top: 5vw;
  padding: 20rpx 8vw 0rpx 8vw;
  font-size: 38rpx;
}
.content {
  background: #fff;
  width: 80vw;
  display: flex;
  flex-direction: column;
  margin-left: 7vw;
  font-size: 36rpx;
  border: 2rpx solid #808080;
  padding-left: 3vw;
  padding-right: 1vw;
}
.content .item {
  display: flex;
  flex-direction: row;
  height: 90rpx;
  align-items: center;
}
.content .item .title {
  width: 50vw;
  display: flex;
  justify-content: left;
}
.content .item ._input {
  width: 55vw;
  font-size: 34rpx;
}
.content .item .code-btn {
  height: 9vw;
  width: 25vw;
  font-size: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #ff7300;
  border: 2rpx solid #ff7300;
}
.content .line {
  width: 80vw;
  margin-left: -3vw;
  border-bottom: 2rpx solid #f5f5f5;
}
.btn {
  margin-top: 13vw;
  width: 85vw;
  color: #fff;
  background: #ff7300;
}
.fold {
  margin-top: 5rpx;
  height: 40rpx;
  width: 50rpx;
}
.select {
  background: #fff;
  display: flex;
  flex-direction: row;
  float: right;
  width: 40vw;
}
.select ._div {
  color: #808080;
  width: 40vw;
  text-align: right;
  font-size: 34rpx;
  padding-right: 2vw;
}
.code {
  width: 25vw;
  display: flex;
  float: right;
  padding-left: 5vw;
  padding-top: 3vw;
}
.no {
  margin-top: 2vw;
  color: #ff7300;
  font-size: 30rpx;
  position: absolute;
  left: 7vw;
}